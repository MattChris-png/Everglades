<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Everglades.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Everglades.MAUI"
    xmlns:views="clr-namespace:Everglades.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Everglades.MAUI">

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="Shopping Cart"
    ContentTemplate="{DataTemplate views:ShoppingCartView}"
    Route="Shopping Cart" />

</Shell>
