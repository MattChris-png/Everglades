<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Everglades.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Everglades.MAUI"
    xmlns:views="clr-namespace:Everglades.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Everglades">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <!--<ShellContent
        Title="ShoppingCart"
        ContentTemplate="{DataTemplate views:ShoppingCartView}"
        Route="Shopping Cart" />-->
    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate views:Inventory}"
        Route="Inventory" />
    <ShellContent
        Title="Product"
        ContentTemplate="{DataTemplate views:ProductView}"
        Route="Product" />
    <ShellContent
        Title="Shop"
        ContentTemplate="{DataTemplate views:Shop}"
        Route="Shop" />
</Shell>
